# supervisord
supervisord_etc_dir: /etc/supervisor

# nginx
nginx_etc_dir: /etc/nginx

# gunicorn
gunicorn_etc_dir: /etc/gunicorn

# PyWPS
pywps_etc_dir: /etc/pywps

# WPS
wps_name: emu
